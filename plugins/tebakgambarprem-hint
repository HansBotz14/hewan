let handler = async (m, { conn }) => {
    conn.tebakgambarp = conn.tebakgambarp ? conn.tebakgambarp : {}
    let id = m.chat
    if (!(id in conn.tebakgambarp)) throw false
    let json = conn.tebakgambarp[id][1]
    let ans = json.jawaban.trim()
    let clue = ans.replace(/[AIUEOaiueo]/g, '_')
    conn.reply(m.chat, '```' + clue + '```\nBalas soalnya, bukan pesan ini', conn.tebakgambarp[id][0])
}
handler.command = /^hintp$/i
handler.limit = true
handler.premium = true

module.exports = handler
